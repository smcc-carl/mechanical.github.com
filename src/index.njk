<section class="px-[10%]">

   <p class="text-center text-5xl font-semibold uppercase mt-20">M&E Data Center</p>

   <div class="">
      <p class="py-12 text-2xl text-slate-600 font-semibold">LATEST MATERIAL REQUEST</p>
      
   </div>

   <div class="">
      <a href="{{equipment.data.file}}">
      <ul class="grid grid-cols-5">
         {%- for equipment in collections.report -%}
         {%- if loop.index0 <5 -%}
         <li>
         <article class="uppercase">
           <img src="./asset/data-storage.png" alt="" class="w-44">
            <p class="text-2xl font-bold mt-4">{{ equipment.data.code }}</p>
            <p class="font-bold">{{ equipment.data.parts }}</p>
            <p class="font-extrabold text-xl text-blue-700">{{ equipment.data.part_status }}</p>
         </article>
        
         </li>
         {%- endif -%}
         {%- endfor -%}
       
      </ul>
      </a>
   </div>

</section>