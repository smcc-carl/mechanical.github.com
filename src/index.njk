---
layout: 'base.njk'
title: SMCC Motorpool
---


<section class="px-[10%]">

   <p class="text-center text-5xl font-semibold uppercase mt-20">M&E Data Center</p>

   <div class="flex justify between items-center">
      <p class="py-12 text-2xl text-slate-600 font-semibold">LATEST MATERIAL REQUEST</p>
       <a href="/report" class="text-xl text-slate-600 ">View All Request</a>
   </div>

   <div class="">
  {%- for report in collections.report | reverse -%}
         {%- if loop.index0 < 5 -%}
      <a href="{{ report.data.file }}">
      <ul class="grid grid-cols-5">
       
         <li>
         <article class="uppercase">
           <img src="./asset/data-storage.png" alt="" class="w-44">
            <p class="text-2xl font-bold mt-4">{{ report.data.code }}</p>
            <p class="font-bold">{{ report.data.parts }}</p>
            <p class="font-semibold text-sm text-blue-700">{{ report.data.status }}</p>
         </article>
        
         </li>
         {%- endif -%}
         {%- endfor -%}
       
      </ul>
      </a>
   </div>

</section>
